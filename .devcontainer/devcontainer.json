{
  "name": "python-devcontainer-sandbox",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        "hbenl.vscode-test-explorer",
        "littlefoxteam.vscode-python-test-adapter",
        "eamodio.gitlens"
      ]
    }
  },
  "postCreateCommand": "poetry config virtualenvs.in-project false && poetry install --no-interaction --no-root",
  "remoteUser": "vscode"
}
